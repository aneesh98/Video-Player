{
  "name": "flexidio-player",
  "version": "1.1.0",
  "private": true,
  "main": "index.js",
  "author": "Aneesh K askthefactorcamera@gmail.com",
  "homepage": "./",
  "build": {
    "appId": "com.electron.flexidioplayer",
    "productName": "Flexidio Player",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./index.js",
      "./additional-webpages/*"
    ],
    "fileAssociations": {
      "ext": [
        "mp4",
        "mkv"
      ]
    },
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb",
      "maintainer": "Aneesh K askthefactorcamera@gmail.com"
    }
  },
  "dependencies": {
    "electron-json-storage": "^4.5.0",
    "srt2vtt": "^1.3.1",
    "urban-dictionary": "^3.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:package:win": "electron-builder -w -c.extraMetadata.main=./index.js",
    "electron:package:linux": "electron-builder -l -c.extraMetadata.main=./index.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "lexico-dictionary": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "relevant-urban": "^2.0.0",
    "video.js": "^7.17.0",
    "web-vitals": "^2.1.2"
  }
}
